
@{
    ViewBag.Title = "QuanLyKhachHang";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="section">

    <div class="fade modal" id="add-customer-modal" tabindex="-1" role="dialog" aria-labelledby="dekete-disk-label">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="add-customer-label">Thêm mới khách hàng</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="ho-va-ten" class="col-sm-3 control-label">Họ và tên</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="ho-va-ten"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="sdt" class="col-sm-3 control-label">Số điện thoại</label>

                            <div class="col-sm-9">
                                <input type="tel" class="form-control" id="sdt" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dia-chi" class="col-sm-3 control-label">Địa chỉ</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="dia-chi" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <div class="fade modal" id="delete-customer-modal" tabindex="-1" role="dialog" aria-labelledby="dekete-customer-label">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="delete-customer-label">Xóa khách hàng</h4>
                </div>
                <div class="modal-body">
                    <h2 class="danger">Bạn có chắc chắn muốn xóa!</h2>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-danger">Có</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row margin-bottom">
        <div class="col-md-12">
            <button class="btn btn-primary" data-target="#add-customer-modal" data-toggle="modal">Thêm khách hàng</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6  col-sm-12">
            <div class="box box-primary">
                <div class="box-header">
                    <p class="box-title">Danh sách khách hàng</p>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã số</th>
                                <th>Họ và tên</th>
                                <th>Số điện thoại</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>0001</td>
                                <td>Hồ Quốc Vửng</td>
                                <td>0966 301 054</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6  col-sm-12">
            <div class="box box-primary">
                <div class="box-header">
                    <p class="box-title">Thông tin chi tiết khách hàng</p>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="ho-va-ten-view" class="col-sm-3 control-label">Họ và tên</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" value="Hồ Quôc Vửng" id="ho-va-ten-view" disabled />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="sdt-view" class="col-sm-3 control-label" >Số điện thoại</label>

                            <div class="col-sm-9">
                                <input type="tel" class="form-control" id="sdt-view" value="0966 301 043" disabled/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dia-chi-view" class="col-sm-3 control-label">Địa chỉ</label>

                            <div class="col-sm-9">
                                <textarea class="form-control" id="dia-chi-view" rows="10" disabled>Phường 5, Gò Vấp, Tp Hồ Chí Minh
                                </textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="box-footer">
                    <div class="col-md-12">
                        <button class="btn btn-default pull-right">Sửa thông tin</button>
                        <button class="btn btn-danger pull-right" style="margin-right:5px" data-toggle="modal" data-target="#delete-customer-modal">Xóa</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
