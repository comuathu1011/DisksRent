@{
    ViewBag.Title = "Quản lý thuê và trả đĩa";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="section" ng-controller="QuanLyThueTraDiaCtrl">

    <div class="fade modal" id="thue-dia-modal" tabindex="-1" role="dialog" aria-labelledby="dekete-disk-label">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="add-customer-label">Thuê đĩa</h4>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Mã đĩa</label>

                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-model="newKhachHang.Ten" />
                                </div>
                            </div>
                             
                        </form>
                    </div>
                    <h5>Thông tin chi tiết của đĩa</h5>
                    <div class="col-md-12">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="ho-va-ten" class="col-sm-3 control-label">Họ và tên</label>

                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-model="newKhachHang.Ten" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="sdt" class="col-sm-3 control-label">Số điện thoại</label>

                                <div class="col-sm-9">
                                    <input type="tel" class="form-control" ng-model="newKhachHang.SoDienThoai" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="dia-chi" class="col-sm-3 control-label">Địa chỉ</label>

                                <div class="col-sm-9">
                                    <textarea rows="10" type="text" class="form-control" ng-model="newKhachHang.DiaChi"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" ng-click="confirmThemKhachHang()">Chấp nhận</button>
                </div>
            </div>
        </div>
    </div>

    <div class="fade modal" id="delete-phi-tre-modal" tabindex="-1" role="dialog" aria-labelledby="dekete-customer-label">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="delete-customer-label">Xóa khách hàng</h4>
                </div>
                <div class="modal-body">
                    <h4 class="danger">Bạn có chắc chắn muốn xóa!</h4>
                    <h2 class="danger">Khách hàng: {{khachHangSelected.Ten}}</h2>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-danger" ng-click="confirmXoaKhachHang()">Có</button>
                </div>
            </div>
        </div>
    </div>

    <div class="fade modal" id="delete-dia-thue-modal" tabindex="-1" role="dialog" aria-labelledby="dekete-customer-label">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="delete-customer-label">Xóa khách hàng</h4>
                </div>
                <div class="modal-body">
                    <h4 class="danger">Bạn có chắc chắn muốn xóa!</h4>
                    <h2 class="danger">Khách hàng: {{khachHangSelected.Ten}}</h2>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-danger" ng-click="confirmXoaKhachHang()">Có</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row margin-bottom">
        <div class="col-md-12">
            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo mã khách hàng">

                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-primary ">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <!-- /.input-group -->
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12  col-sm-12">
            <div class="box box-primary">
                <div class="box-header">
                    <p class="box-title">Thông tin chi tiết khách hàng</p>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body" id="body-box-info">
                    <div class="col-md-12">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="ho-va-ten-view" class="col-sm-3 control-label">Họ và tên</label>

                                <div class="col-sm-9">
                                    <input type="text" class="form-control" ng-disabled="updateFiled" ng-model="khachHangSelected.Ten" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="sdt-view" class="col-sm-3 control-label">Số điện thoại</label>

                                <div class="col-sm-9">
                                    <input type="tel" class="form-control" ng-disabled="updateFiled" ng-model="khachHangSelected.SoDienThoai" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="dia-chi-view" class="col-sm-3 control-label">Địa chỉ</label>

                                <div class="col-sm-9">
                                    <textarea class="form-control" ng-disabled="updateFiled" ng-model="khachHangSelected.DiaChi" rows="4">
                                        Phường 5, Gò Vấp, Tp Hồ Chí Minh
                                    </textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="col-md-12 ">
                        <button class="btn btn-primary pull-right" data-toggle="modal" data-target="#thue-dia-modal">Thuê đĩa</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12  col-sm-12">
            <div class="box box-primary">
                <div class="box-header">
                    <p class="box-title">Danh sách các đĩa đang thuê</p>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body" id="body-box-info">
                    <div class="col-md-12">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        
                                    </th>
                                    <th>Mã số</th>
                                    <th>Phí trễ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>
                                        <input type="checkbox" />
                                    </th>
                                    <th>0001</th>
                                    <th>20$</th>
                                </tr>
                                <tr>
                                    <th>
                                        <input type="checkbox" />
                                    </th>
                                    <th>0001</th>
                                    <th>20$</th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="col-md-12">
                        <button class="btn btn-primary btn-sm pull-left" data-toggle="modal" data-target="#delete-dia-thue-modal">
                            Trả đĩa
                        </button>
                        <ul style="margin: 0"
                            uib-pagination
                            ng-change="khachHangPageChange()"
                            total-items="khachHangPagination.totalItem"
                            ng-model="khachHangPagination.model"
                            max-size="khachHangPagination.maxPage"
                            items-per-page="khachHangPagination.perPage"
                            class="pagination-sm pull-right"
                            boundary-link-numbers="true"
                            rotate="false"></ul>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5  col-sm-12">
            <div class="box box-primary">
                <div class="box-header">
                    <p class="box-title">Danh sách phí trả trễ</p>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body" id="body-box-info">
                    <div class="col-md-12">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        
                                    </th>
                                    <th>Mã số</th>
                                    <th>Phí trễ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>
                                        <input type="checkbox" />
                                    </th>
                                    <th>0001</th>
                                    <th>20$</th>
                                </tr>
                                <tr>
                                    <th>
                                        <input type="checkbox" />
                                    </th>
                                    <th>0001</th>
                                    <th>20$</th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="col-md-12">
                        <button class="btn btn-danger btn-sm pull-left" data-target="#delete-phi-tre-modal" data-toggle="modal">
                            Xóa
                        </button>
                        <ul style="margin: 0"
                            uib-pagination
                            ng-change="khachHangPageChange()"
                            total-items="khachHangPagination.totalItem"
                            ng-model="khachHangPagination.model"
                            max-size="khachHangPagination.maxPage"
                            items-per-page="khachHangPagination.perPage"
                            class="pagination-sm pull-right"
                            boundary-link-numbers="true"
                            rotate="false"></ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7  col-sm-12">
            <div class="box box-primary">
                <div class="box-header">
                    <p class="box-title">Chi tiết phí trễ</p>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body" id="body-box-info">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="ho-va-ten-view" class="col-sm-3 control-label">Họ và tên</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" ng-disabled="updateFiled" ng-model="khachHangSelected.Ten" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="sdt-view" class="col-sm-3 control-label">Số điện thoại</label>

                            <div class="col-sm-9">
                                <input type="tel" class="form-control" ng-disabled="updateFiled" ng-model="khachHangSelected.SoDienThoai" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dia-chi-view" class="col-sm-3 control-label">Địa chỉ</label>

                            <div class="col-sm-9">
                                <textarea class="form-control" ng-disabled="updateFiled" ng-model="khachHangSelected.DiaChi" rows="4">
                                    Phường 5, Gò Vấp, Tp Hồ Chí Minh
                                </textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="box-footer">
                    <div class="col-md-12">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

