
@{
    ViewBag.Title = "QuanLyTieuDe";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="section">
    <div class="modal fade" id="add-title-modal" tabindex="-1" role="dialog" aria-labelledby="add-title-label">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="add-title-label">Thêm mới tiêu đề</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="loai-tieu-de" class="col-sm-2 control-label">Loại</label>

                            <div class="col-sm-10">
                                <select class="form-control" id="loai-tieu-de">
                                    <option>Game</option>
                                    <option>Video</option>
                                </select>
                              
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="loai-tieu-de" class="col-sm-2 control-label">Tên tiêu đề</label>

                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="ten-tieu-de" placeholder="">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="add-number-title-modal" tabindex="-1" role="dialog" aria-labelledby="add-title-label">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="add-title-label">Thêm số lương tiêu đề</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="so-luong-tieu-de" class="col-sm-4 control-label">Số lượng</label>

                            <div class="col-sm-8">
                                <input type="number" class="form-control" id="so-luong-tieu-de"/>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-primary margin-bottom" data-toggle="modal" data-target="#add-title-modal">Thêm mới tiêu đề</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Danh sách tiêu đề</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Mã số</th>
                                <th>Loại</th>
                                <th>Tên</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>0001</td>
                                <td>Game</td>
                                <td>LOL</td>
                                <td>
                                    <div class="input-group-btn btn-group-sm">
                                        <button class="btn btn-primary" data-target="#add-number-title-modal" data-toggle="modal">Thêm</button>
                                        <button class="btn btn-danger">Xóa</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>

        <div class="col-md-6 col-sm-12">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Báo cáo cáo chi tiết</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                   <h1>Giao diện mẫu báo cáo</h1>
                </div><!-- /.box-body -->
                <div class="box-footer ">
                    <button class="btn btn-default pull-right">Xuất báo cáo</button>
                </div>
            </div><!-- /.box -->
        </div>
    </div>
</div>

